{
  "openapi": "3.0.0",
  "info": {
    "title": "Pet Store API",
    "description": "A sample API for managing pets",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://petstore.swagger.io/v2",
      "description": "Production server"
    }
  ],
  "paths": {
    "/pets": {
      "get": {
        "operationId": "listPets",
        "summary": "List all pets",
        "description": "Returns a list of all pets in the store",
        "tags": ["pets"],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of pets to return",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "security": [
          {
            "apiKey": []
          }
        ]
      },
      "post": {
        "operationId": "createPet",
        "summary": "Create a pet",
        "description": "Adds a new pet to the store",
        "tags": ["pets"],
        "requestBody": {
          "description": "Pet object to be added",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              },
              "example": {
                "name": "Fluffy",
                "species": "cat",
                "age": 3
              }
            }
          }
        },
        "security": [
          {
            "apiKey": []
          }
        ]
      }
    },
    "/pets/{petId}": {
      "parameters": [
        {
          "name": "petId",
          "in": "path",
          "description": "ID of the pet",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "operationId": "getPet",
        "summary": "Get pet by ID",
        "description": "Returns a single pet",
        "tags": ["pets"],
        "security": [
          {
            "apiKey": []
          }
        ]
      },
      "put": {
        "operationId": "updatePet",
        "summary": "Update a pet",
        "description": "Updates an existing pet",
        "tags": ["pets"],
        "requestBody": {
          "description": "Updated pet object",
          "required": true,
          "content": {
            "application/json": {
              "example": {
                "name": "Updated Name",
                "age": 4
              }
            }
          }
        },
        "security": [
          {
            "apiKey": []
          }
        ]
      },
      "delete": {
        "operationId": "deletePet",
        "summary": "Delete a pet",
        "description": "Removes a pet from the store",
        "tags": ["pets"],
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/health": {
      "get": {
        "operationId": "healthCheck",
        "summary": "Health check",
        "description": "Check if the API is running"
      }
    }
  },
  "components": {
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "name": "X-API-Key",
        "in": "header"
      },
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
